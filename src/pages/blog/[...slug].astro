---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Extract categories for navigation
const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

const categoryMap = new Map<string, number>();
allPosts.forEach((p) => {
  const parts = p.slug.split('/');
  if (parts.length > 1) {
    const categorySlug = parts[0];
    categoryMap.set(categorySlug, (categoryMap.get(categorySlug) || 0) + 1);
  }
});

const categories = Array.from(categoryMap.entries())
  .map(([slug, count]) => ({
    slug,
    name: slug.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' '),
    count
  }))
  .sort((a, b) => b.count - a.count);

const currentCategory = post.slug.includes('/') ? post.slug.split('/')[0] : undefined;
---

<Layout title={post.data.title} categories={categories} currentCategory={currentCategory}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/" class="hover:text-gray-700">All Posts</a>
      {currentCategory && (
        <>
          <span class="mx-2">/</span>
          <a href={`/category/${currentCategory}`} class="hover:text-gray-700">
            {currentCategory.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}
          </a>
        </>
      )}
      <span class="mx-2">/</span>
      <span class="text-gray-900">{post.data.title}</span>
    </nav>

    <header class="mb-8 pb-8 border-b border-gray-200">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{post.data.title}</h1>
      {post.data.description && (
        <p class="text-xl text-gray-600 mb-4">{post.data.description}</p>
      )}
      <div class="flex items-center gap-4 text-sm text-gray-500">
        <time>
          {new Date(post.data.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {currentCategory && (
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            {currentCategory.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}
          </span>
        )}
      </div>
    </header>
    
    <div class="prose prose-lg prose-blue max-w-none">
      <Content />
    </div>
    
    <div class="mt-12 pt-8 border-t border-gray-200">
      <a href={currentCategory ? `/category/${currentCategory}` : "/"} class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to {currentCategory ? 'category' : 'all posts'}
      </a>
    </div>
  </article>
</Layout>
